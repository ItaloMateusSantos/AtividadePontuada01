programa {
  funcao inicio() {
// Digitando informações condicionais 
  real a, b, c

// Informações executadas pelo usuário 
  escreva("Digite o valor a: ")
  leia(a)
  escreva("Digite o valor b: ")
  leia(b)
  escreva("Digite o valor c: ")
  leia(c)
  
  // Inserindo as variáveis
  se(a+b<c)
    escreva("a+b é menor que c")
  senao
    escreva("a+b é maior que c")
  



  }
}
